@model Transcript.Domain.Entities.Student

<style>
    .panelTitle {
        color: #e65100;
        font-size: 27px;
        text-align: center;
    }
</style>

<div class="panel panel-default" style="padding:30px">
    <div class="panelTitle">
        Вы уверены что хотите удалить это ?
    </div>
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.Group.Name)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.SecondName)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th class="text-right">
                @Html.DisplayNameFor(model => model.MiddleName)
            </th>
        </tr>

        <tr>
            <td class="text-right">
                @Html.DisplayFor(model => model.Group.Name)
            </td>
            <td class="text-right">
                @Html.DisplayFor(model => model.SecondName)
            </td>
            <td class="text-right">
                @Html.DisplayFor(model => model.FirstName)
            </td>
            <td class="text-right">
                @Html.DisplayFor(model => model.MiddleName)
            </td>
        </tr>
    </table>
    @using (Html.BeginForm("DeleteConfirmed", "Student", Model))
    {
        @Html.AntiForgeryToken()

        <div class="panel-footer">
            <input type="submit" value="Удалить" class="btn btn-primary" />
            @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>

