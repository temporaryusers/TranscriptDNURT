@{
    ViewBag.Title = "AdminPanel";
}

<style>
    .my_card:hover {
        box-shadow: 0 12px 15px 0 rgba(0, 0, 0, 0.24), 0 17px 50px 0 rgba(0, 0, 0, 0.19);
    }

    .myCardTitle {
        color: #e65100;
        font-size: 27px;
        text-align: center;
    }
</style>

<div class="col s12 m6 l2" style="margin-left: 150px">
    <div class="card z-depth-1 my_card">
        <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" src="~/Content/Image/Logo.jpg">
        </div>
        <div class="card-content">
            <span class="card-title activator grey-text text-darken-4">Пропуски</span>
            <p>
                I am a very simple card. I am good at containing small bits of information.
                I am convenient because I require little markup to use effectively.
            </p>
        </div>
        <div class="card-action">
            @Html.ActionLink("Изменить", "Index", "Absence")
        </div>
    </div>
</div>

