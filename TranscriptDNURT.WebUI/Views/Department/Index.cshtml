@model IEnumerable<Transcript.Domain.Entities.Department>

<style>
    .panelTitle {
        color: #e65100;
        font-size: 27px;
        text-align: center;
    }
</style>

<div class="panel panel-default" style="padding:30px">
    <div class="panelTitle">
        Список кафедр
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.Faculty.Name)
                </th>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.Abbreviation)
                </th>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.Number)
                </th>
                <th class="text-center">
                    Действия
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Faculty.Name)
                    </td>
                    <td class="text-right">
                        @Html.ActionLink(item.Name, "Edit", new { id = item.Id })
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Abbreviation)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Number)
                    </td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Department", item))
                        {
                            <input type="submit" class="btn btn-default btn-xs" value="Удалить" />
                        }
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-default" })
        @Html.ActionLink("Назад", "AdminPanel", "Account", null, new { @class = "btn btn-default" })
    </div>
</div>