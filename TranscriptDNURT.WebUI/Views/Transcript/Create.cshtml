@model Transcript.Domain.Entities.Transcript

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<style>
    .panelTitle {
        color: #e65100;
        font-size: 27px;
        text-align: center;
    }
</style>

<div class="center-align panelTitle">
    <h3>Добавление информации о успеваемости</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="z-depth-1 col s12 m6 l4 offset-m3 offset-l4 white center-align">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="input-field">

            <div style="text-align:left; padding:7px">
                Студент
            </div>

            @Html.DropDownList("StudentId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.StudentId, "", new { @class = "text-danger" })

            <div style="text-align:left; padding:7px">
                Дисциплина
            </div>

            @Html.DropDownList("SubjectId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SubjectId, "", new { @class = "text-danger" })

            <div style="text-align:left; padding:7px">
                Преподаватель
            </div>

            @Html.DropDownList("TeacherId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TeacherId, "", new { @class = "text-danger" })

            <div style="text-align:left; padding:7px">
                Тип контроля
            </div>

            @Html.DropDownList("TypeControlId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TypeControlId, "", new { @class = "text-danger" })

            <div class="input-field">
                @Html.LabelFor(model => model.Mark)
                @Html.EditorFor(model => model.Mark)
                @Html.ValidationMessageFor(model => model.Mark, "", new { @class = "text-danger" })
            </div>

            <div class="input-field">
                @Html.LabelFor(model => model.Semester)
                @Html.EditorFor(model => model.Semester)
                @Html.ValidationMessageFor(model => model.Semester, "", new { @class = "text-danger" })
            </div>

            <div class="input-field">
                @Html.LabelFor(model => model.Year)
                @Html.EditorFor(model => model.Year)
                @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
            </div>

            <div style="padding:10px">
                <input type="submit" value="Создать" class="btn btn-default" />
                @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-default" })
            </div>

        </div>
    </div>
}


