@model Transcript.Domain.Entities.Absence

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<style>
    .panelTitle {
        color: #e65100;
        font-size: 27px;
        text-align: center;
    }
</style>

<div class="center-align panelTitle">
    <h3>Редактирование пропуска студента "@Model.Student.SecondName @Model.Student.FirstName @Model.Student.MiddleName"</h3>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="z-depth-1 col s12 m6 l4 offset-m3 offset-l4 white center-align" style="padding: 20px;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="input-field">

            <div style="text-align:left; padding:7px">
                Студент
            </div>

            @Html.DropDownList("StudentId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.StudentId, "", new { @class = "text-danger" })

            <div style="text-align:left; padding:7px">
                Дисциплина
            </div>

            @Html.DropDownList("SubjectId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SubjectId, "", new { @class = "text-danger" })

            <div style="text-align:left; padding:7px">
                Преподаватель
            </div>

            @Html.DropDownList("TeacherId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TeacherId, "", new { @class = "text-danger" })

            <div style="text-align:left; padding:7px">
                Тип занятия
            </div>

            @Html.DropDownList("TypeClassId", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TypeClassId, "", new { @class = "text-danger" })

            <div class="input-field">
                <div>@Html.LabelFor(model => model.DateAbsence)</div>
                @Html.EditorFor(model => model.DateAbsence)
                @Html.ValidationMessageFor(model => model.DateAbsence, "", new { @class = "text-danger" })
            </div>

            <div style="padding:10px">
                <input type="submit" value="Сохранить" class="btn btn-default" />
                @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-default" })
            </div>

        </div>
    </div>
}

